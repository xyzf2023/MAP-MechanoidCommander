<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>MAP_Make_Mechlink</defName>
    <label>制作机控中枢</label>
    <description>制作机控中枢。</description>
    <jobString>正在制作机控中枢。</jobString>
    <researchPrerequisite>ArchotechMechtech</researchPrerequisite>
    <workAmount>5000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>NanostructuringChip</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Gold</li>
        <li>ComponentSpacer</li>
        <li>NanostructuringChip</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Mechlink>1</Mechlink>
    </products>
  </RecipeDef>

  <RecipeDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>MAP_Make_MechBandwidthLink</defName>
    <label>制作带宽协调模块</label>
    <description>对机控中枢进行改造，使其变为能处理和转发机械体信号的机械体用模块。机械体安装后，将能承担部分机械师的带宽处理功能。</description>
    <jobString>正在制作带宽协调模块。</jobString>
    <researchPrerequisite>ArchotechMechtech</researchPrerequisite>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Mechlink</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
        <li>Mechlink</li>
        <li>Plasteel</li>
        <li>Gold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MAP_MechBandwidthLink>1</MAP_MechBandwidthLink>
    </products>
  </RecipeDef>
</Defs>
